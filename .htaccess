RewriteEngine On
RewriteCond %{HTTP_HOST} ^(www\.)?belvedereunion\.com [NC]
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://belvedereunion\.com/$1 [R,L]

<IfModule mod_rewrite.c>

    RewriteEngine On

    RewriteRule ^(.*)$ public/$1 [L]

    #RewriteEngine On
    RewriteCond %{HTTPS} !=on
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301,NE]
</IfModule>



